    <input type="hidden" name="user" value=<%= user %>>
  </form>
  <button id="modal-open" class="button">スコア一覧</button>
  <div id="modal-content">
    <h1>スコア</h1>
    <button id="modal-close" class="button">閉じる</button>
  </div>
</div>
